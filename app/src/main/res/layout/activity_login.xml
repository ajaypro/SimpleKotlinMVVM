<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="loginActivityCallback"
            type="com.ajay.kotlinmvvm.view.callback.LoginActivityCallback" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="@dimen/padding" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="@dimen/padding"/>



            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                <Button
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_toStartOf="@+id/register"
                    android:background="@color/colorPrimary"
                    android:onClick="@{(theView) -> loginActivityHandler.onLoginClick(theView)}"
                    android:text="@string/login" android:layout_marginEnd="28dp"/>

                <Button
                    android:id="@+id/register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentEnd="true"
                    android:onClick="@{(theView) -> loginActivityHandler.onRegisterClick(theView)}"
                    android:background="@color/colorAccent"
                    android:text="@string/register"
                    android:layout_marginEnd="10dp"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</layout>